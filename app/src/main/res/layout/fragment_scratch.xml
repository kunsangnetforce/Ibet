<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bonus_bg"
    tools:context="com.netforceinfotech.ibet.scratchview.ScratchFragment">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/emiter_top_left"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_gravity="top|start"
        android:layout_marginTop="-20dp" />

    <View
        android:id="@+id/emiter_top_right"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="-20dp" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bonus_bggif"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scratch to find three of a kind"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:background="@color/transulation"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="150">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="50">


                    <ImageView
                        android:id="@+id/imageView0"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_launcher" />

                    <com.winsontan520.WScratchView xmlns:wsv="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/scratchView0"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginLeft="1dp"
                        wsv:revealSize="40dp"
                        wsv:scratchDrawable="@drawable/ic_scratch_bonus"
                        wsv:scratchable="true" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="50">


                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_launcher" />

                    <com.winsontan520.WScratchView xmlns:wsv="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/scratchView1"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginLeft="1dp"
                        wsv:revealSize="40dp"
                        wsv:scratchDrawable="@drawable/ic_scratch_bonus"
                        wsv:scratchable="true" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="50">


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_launcher" />

                    <com.winsontan520.WScratchView xmlns:wsv="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/scratchView2"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginLeft="1dp"
                        wsv:revealSize="40dp"
                        wsv:scratchDrawable="@drawable/ic_scratch_bonus"
                        wsv:scratchable="true" />


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="150">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="50">


                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_launcher" />

                    <com.winsontan520.WScratchView xmlns:wsv="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/scratchView3"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginLeft="1dp"
                        wsv:revealSize="40dp"
                        wsv:scratchDrawable="@drawable/ic_scratch_bonus"
                        wsv:scratchable="true" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="50">


                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_launcher" />

                    <com.winsontan520.WScratchView xmlns:wsv="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/scratchView4"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginLeft="1dp"
                        wsv:revealSize="40dp"
                        wsv:scratchDrawable="@drawable/ic_scratch_bonus"
                        wsv:scratchable="true" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="50">


                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_launcher" />

                    <com.winsontan520.WScratchView xmlns:wsv="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/scratchView5"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginLeft="1dp"
                        wsv:revealSize="40dp"
                        wsv:scratchDrawable="@drawable/ic_scratch_bonus"
                        wsv:scratchable="true" />


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="150">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="50">


                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_launcher" />

                    <com.winsontan520.WScratchView xmlns:wsv="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/scratchView6"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginLeft="1dp"
                        wsv:revealSize="40dp"
                        wsv:scratchDrawable="@drawable/ic_scratch_bonus"
                        wsv:scratchable="true" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="50">


                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_launcher" />

                    <com.winsontan520.WScratchView xmlns:wsv="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/scratchView7"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginLeft="1dp"
                        wsv:revealSize="40dp"
                        wsv:scratchDrawable="@drawable/ic_scratch_bonus"
                        wsv:scratchable="true" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="50">


                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_launcher" />

                    <com.winsontan520.WScratchView xmlns:wsv="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/scratchView8"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginLeft="1dp"
                        wsv:revealSize="40dp"
                        wsv:scratchDrawable="@drawable/ic_scratch_bonus"
                        wsv:scratchable="true" />


                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/buttonCollect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/darkgrey"
            android:padding="6dp"
            android:text="Collect your price"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutCounter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transulation" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Come back in:"
                android:textColor="@color/colorAccent"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/textViewCounter"
                style="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:gravity="center"
                android:text="23:45:20"
                android:textColor="@color/red"
                android:textSize="50sp" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonBuyScratch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:background="@color/colorPrimary"
            android:padding="6dp"
            android:text="Buy another for 150 coins"
            android:textColor="@color/colorAccent" />
    </RelativeLayout>
</FrameLayout>
