<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.netforceinfotech.ibet1.scratchview.ScratchActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar_coin" />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_layout"
        tools:context="com.netforceinfotech.ibet1.scratchview.ScratchFragment">

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/emiter_top_left"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_gravity="top|start"
            android:layout_marginTop="-20dp" />

        <View
            android:id="@+id/emiter_top_right"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="-20dp" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/linearLayoutScrach"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scratch_to_find_three_of_a_kind"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="32dp"
                android:background="@color/transulation"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="150">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="50">

                        <TextView
                            android:id="@+id/textView0"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/circular_bg_fill"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                        <com.winsontan520.WScratchView xmlns:wsv="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/scratchView0"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginLeft="1dp"
                            wsv:revealSize="40dp"
                            wsv:scratchDrawable="@drawable/ic_scratch_bonus"
                            wsv:scratchable="true" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="50">

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/circular_bg_fill"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                        <com.winsontan520.WScratchView xmlns:wsv="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/scratchView1"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginLeft="1dp"
                            wsv:revealSize="40dp"
                            wsv:scratchDrawable="@drawable/ic_scratch_bonus"
                            wsv:scratchable="true" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="50">


                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/circular_bg_fill"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                        <com.winsontan520.WScratchView xmlns:wsv="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/scratchView2"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginLeft="1dp"
                            wsv:revealSize="40dp"
                            wsv:scratchDrawable="@drawable/ic_scratch_bonus"
                            wsv:scratchable="true" />


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="150">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="50">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/circular_bg_fill"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                        <com.winsontan520.WScratchView xmlns:wsv="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/scratchView3"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginLeft="1dp"
                            wsv:revealSize="40dp"
                            wsv:scratchDrawable="@drawable/ic_scratch_bonus"
                            wsv:scratchable="true" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="50">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/circular_bg_fill"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="24sp" />


                        <com.winsontan520.WScratchView xmlns:wsv="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/scratchView4"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginLeft="1dp"
                            wsv:revealSize="40dp"
                            wsv:scratchDrawable="@drawable/ic_scratch_bonus"
                            wsv:scratchable="true" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="50">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/circular_bg_fill"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="24sp" />


                        <com.winsontan520.WScratchView xmlns:wsv="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/scratchView5"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginLeft="1dp"
                            wsv:revealSize="40dp"
                            wsv:scratchDrawable="@drawable/ic_scratch_bonus"
                            wsv:scratchable="true" />


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="150">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="50">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/circular_bg_fill"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                        <com.winsontan520.WScratchView xmlns:wsv="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/scratchView6"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginLeft="1dp"
                            wsv:revealSize="40dp"
                            wsv:scratchDrawable="@drawable/ic_scratch_bonus"
                            wsv:scratchable="true" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="50">


                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/circular_bg_fill"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                        <com.winsontan520.WScratchView xmlns:wsv="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/scratchView7"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginLeft="1dp"
                            wsv:revealSize="40dp"
                            wsv:scratchDrawable="@drawable/ic_scratch_bonus"
                            wsv:scratchable="true" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="50">


                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/circular_bg_fill"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                        <com.winsontan520.WScratchView xmlns:wsv="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/scratchView8"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginLeft="1dp"
                            wsv:revealSize="40dp"
                            wsv:scratchDrawable="@drawable/ic_scratch_bonus"
                            wsv:scratchable="true" />


                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/buttonCollect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/darkgrey"
                android:drawablePadding="12dp"
                android:drawableRight="@drawable/img_dollor"
                android:padding="6dp"
                android:text="@string/collect_your_price"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutCounter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transulation" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/come_back_in"
                    android:textColor="@color/colorAccent"
                    android:textSize="50sp" />

                <TextView
                    android:id="@+id/textViewCounter"
                    style="@style/Base.TextAppearance.AppCompat.Large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:textSize="50sp" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonBuyScratch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="32dp"
                android:background="@color/colorPrimary"
                android:drawablePadding="12dp"
                android:drawableRight="@drawable/img_dollor"
                android:padding="6dp"
                android:text="@string/buy_another_for_20_coins"
                android:textColor="@color/colorAccent" />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
